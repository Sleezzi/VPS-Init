server { # HTTPS
	server_name cdn.sleezzi.fr;

	listen 443;

	location /minecraft/instances/Lucwars {
		alias /website/cdn.sleezzi.fr/Lucwars.zip;
		add_header Content-Disposition "attachment; filename=Lucwars.zip";
	}


	location /minecraft/instances/Lucwars-Iris {
		alias /website/cdn.sleezzi.fr/Lucwars-Iris.zip;
		add_header Content-Disposition "attachment; filename=Lucwars-Iris.zip";
	}
}

server {
	if ($host = cdn.sleezzi.fr) {
		return 301 https://$host$request_uri;
	}
	
	listen 80;
	server_name cdn.sleezzi.fr;
	return 404;
}